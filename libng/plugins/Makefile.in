srcdir=@srcdir@
VPATH=$(srcdir)

include ../../Make.config

CFLAGS=-g -fPIC @CFLAGS@ $(WARN_FLAGS) $(LFS_FLAGS) -I../.. -I..
PLUGINS=flt-nop.so flt-invert.so conv-mjpeg.so write-avi.so \
	@PLUGINS@

all build: $(PLUGINS)

.SUFFIXES: .so .o
.o.so:
	gcc $(CFLAGS) -shared -Wl,-soname,$@ -o $@ $<

write-qt.so: write-qt.o
	gcc $(CFLAGS) -shared -Wl,-soname,$@ -o $@ $< $(QT_LIBS)

clean:
	rm -f $(PLUGINS) *.o

distclean realclean: clean
	rm -f Makefile *~ *.bak

install: all
	$(INSTALL_DIR) $(libdir)
	$(INSTALL_PROGRAM) -s $(PLUGINS) $(libdir)

depend dep:
	$(DEPEND) -- $(CFLAGS) -- *.c

