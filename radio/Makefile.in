srcdir=@srcdir@
VPATH=$(srcdir)

ROOT=
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=$(ROOT)@bindir@
mandir=$(ROOT)@mandir@

OS:=$(shell uname -s | tr "A-Z" "a-z")

CC=@CC@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_DIR=mkdir -p

CFLAGS=-g -Wall @CFLAGS@ -I$(srcdir)/.. -I..

ifeq ($(OS),linux)
  PROGS=radio
else
  PROGS=
endif

##########################################################################

all build: $(PROGS)

radio: radio.o
	$(CC) $(CFLAGS) -o $@ $< @LIBCURSES@

install: all
	$(INSTALL_DIR) $(bindir)
	$(INSTALL_PROGRAM) -s radio $(bindir)
	$(INSTALL_DATA) $(srcdir)/radio.man $(mandir)/man1/radio.1

clean:
	-rm -f *.o core* TAGS

realclean distclean: clean
	-rm -f $(PROGS) Makefile *~ *.bak

dep depend:

